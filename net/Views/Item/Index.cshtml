@model IEnumerable<Item>

<div class="container p-3">
   <div class="row pt-4">
        <div class="col-6">
             <h2 class="text-primary">Item List with Price</h2>
        </div>
   <div class="col-6 text-right">
       <a asp-controller="Item" asp-action="Create" class="btn btn-primary">Add New Item</a>
    </div>
</div>
    <br />
    @if(Model.Count() >0)
    {<table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Item Name</th>
      <th scope="col">Item Price</th>
    </tr>
  </thead>
  <tbody>
      @foreach(var Expenses in Model)
       {
       <tr>
      @*<th scope="row"></th>*@
      <td width="35%">@Expenses.id</td>
      <td width="35%">@Expenses.ItemName</td>
      <td width="30%">Rs @Expenses.ItemPrice</td>
      <td>
          <div class="w-100 btn-group" role="group">
         <a asp-controller="Item" asp-action="Update" asp-route-ID="@Expenses.id" class="btn btn-primary mx-1">Update</a>
         <a asp-controller="Item" asp-action="Delete" asp-route-ID="@Expenses.id" class="btn btn-danger mx" id ="Delete">Delete</a>

      </div>
      </td>
      


    </tr>
       }
                
  </tbody>
</table>
      

    }
</div>


@section Scripts{ 
    <script>

        $(document).ready(function () {
            var output = document.getElementById('Delete');
            output.src = $("#ProfilePictureURL").val();
        })
    </script>
}